<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteRecruitmentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/green">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_icon"
                android:id="@+id/closeBtn_Post"
                android:background="@color/green"
                android:layout_gravity="right" />
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCFCF"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/recruitment_post_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작성된 시간 hh:mm"
                        android:textSize="30px"
                        android:layout_marginRight="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인원"
                        android:textSize="30px"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="20sp">
                        <TextView
                            android:id="@+id/people_cnt_tv_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30px"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:text="1/4"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/title_tv_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="80px"></TextView>
                <TextView
                    android:id="@+id/start_tv_post"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="출발지"
                    android:gravity="start"
                    android:textSize="50px"
                    android:layout_marginTop="12dp"></TextView>
                <TextView
                    android:id="@+id/end_tv_post"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="목적지"
                    android:gravity="start"
                    android:textSize="50px"
                    android:layout_marginTop="12dp"></TextView>
                <TextView
                    android:id="@+id/contents_tv_post"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:text="내용"
                    android:gravity="start"
                    android:background="@android:color/transparent"
                    android:textSize="50px"
                    android:layout_marginTop="12dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/post_map"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>